html
  head
    title Student Details
    script(type='text/javascript', src='/javascripts/validation.js')
  body
    include template
    #data.error-box(style='background-position: 10px 50%; padding: 0px 0pt 0pt;')
    #error.flash-content
    form#addRecord(action='/add', method='post', name='addRecord')
      table
        tr
          td(colspan='2')
            h3
              u  Adding details in record 
        tr
          td Roll No: 
          td
            input(type='text', placeholder='Roll', name='rollNo', required='required')
          br
          tr
            td Name:	
            td
              input(type='text', placeholder='Name', name='name')
            br
            tr
              td Percentage: 
              td
                input#percent(type='text', name='percentage', placeholder='Percentage')
              br
              tr
                td(colspan='2')
                  br
                  center
                    input.btn(type='submit', value='Add Record', onclick='return validateInputs()')
